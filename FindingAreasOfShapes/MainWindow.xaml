<Window x:Class="FindingAreasOfShapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindingAreasOfShapes"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300">
	<StackPanel>
		<TextBlock Text="Find area OF =>"/>
		<ComboBox x:Name="figures" Text="ComboBombo">
			<ComboBoxItem x:Name="cbi1" Selected="Cbi1_Selected">Circumference</ComboBoxItem>
			<ComboBoxItem x:Name="cbi2" Selected="Cbi2_Selected">Square</ComboBoxItem>
			<ComboBoxItem x:Name="cbi3" Selected="Cbi3_Selected" >Rectangle</ComboBoxItem>
			<ComboBoxItem x:Name="cbi4" Selected="Cbi4_Selected" >Right triangle</ComboBoxItem>
			<ComboBoxItem x:Name="cbi5" Selected="Cbi5_Selected" >Equilateral triangle</ComboBoxItem>
		</ComboBox>
		<StackPanel>
			<Label x:Name="l1" Content="" Visibility="Hidden"/>
			<TextBox x:Name="tb1" Visibility="Hidden"/>
			<Label x:Name="l2" Content="" Visibility="Hidden"/>
			<TextBox x:Name="tb2" Visibility="Hidden"/>
		</StackPanel>
		<Button x:Name="bRes" Content="CLICK ME AND TAKE UR RESULT" HorizontalAlignment="Left" Click="BRes_Click"/>
		<TextBlock x:Name="tbRes"/>
	</StackPanel>
</Window>
