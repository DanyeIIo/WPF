<Window x:Class="PythagorasTheorem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PythagorasTheorem"
        mc:Ignorable="d"
        Title="MainWindow" Height="334.158" Width="800">
	<StackPanel Background="Gray">
		<StackPanel Orientation="Horizontal" Margin="5px">
			<TextBox x:Name="tbInput" Background="DarkCyan" Height="30" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="6"/>
			<Label Content=" &lt;- Input number here" Background="White"  Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15 0 0 0"/>
		</StackPanel>
		<StackPanel Margin="5 7 0 5">
			<RadioButton x:Name="rb1" GroupName="Date" Content="Future coming dates" Margin="7"/>
			<RadioButton x:Name="rb2" GroupName="Date" Content="Past nearest dates" Margin="7"/>
			<RadioButton x:Name="rb3" GroupName="Date" Content="Dates after 1000" Margin="7"/>
		</StackPanel>
		
		<Button Content="Click me" Height="50" VerticalAlignment="Top" Margin="0 0 0 10" Click="Button_Click"/>
		<TextBlock x:Name="tbRes" Height="80" Margin="10" FontSize="10"/>
	</StackPanel>
</Window>
